<?xml version="1.0" ?>
<sdf version="1.8">
  <model name="vehicle_blue" canonical_link="chassis">

    <!-- ================= CHASSIS ================= -->
    <link name="chassis">
      <pose>0 0 0.2 0 0 0</pose>

      <inertial>
        <mass>100</mass>
        <inertia>
          <ixx>2</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>4</iyy><iyz>0</iyz><izz>5</izz>
        </inertia>
      </inertial>

      <visual name="chassis_visual">
        <geometry>
          <mesh>
            <!-- CHANGE filename if needed -->
            <uri>file:///home/deyung/ros2_newws/src/robot_description/description/meshes/new_car_chassis.stl</uri>
            <scale>0.5 0.5 0.5</scale>
          </mesh>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>

      <!-- Use a simple collision for stability -->
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>1.6 0.9 0.4</size>
          </box>
        </geometry>
      </collision>

      <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>50</update_rate>
        <topic>imu</topic>
      </sensor>
    </link>

    <!-- ================= REAR WHEELS ================= -->
    <link name="rear_left_wheel">
      <pose>-0.6 0.42 0 1.5708 1.5708 0</pose>
      <inertial>
        <mass>7</mass>
        <inertia>
          <ixx>0.086</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.086</iyy><iyz>0</iyz><izz>0.14</izz>
        </inertia>
      </inertial>

      <visual name="rear_left_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.17</length>
          </cylinder>
        </geometry>
      </visual>

      <collision name="rear_left_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.17</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <link name="rear_right_wheel">
      <pose>-0.6 -0.42 0 1.5708 1.5708 0</pose>
      <inertial>
        <mass>7</mass>
        <inertia>
          <ixx>0.086</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.086</iyy><iyz>0</iyz><izz>0.14</izz>
        </inertia>
      </inertial>

      <visual name="rear_right_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.17</length>
          </cylinder>
        </geometry>
      </visual>

      <collision name="rear_right_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.17</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- ================= FRONT STEERING LINKS ================= -->
    <link name="front_left_steering_link">
      <pose>0.6 0.45 0 0 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.015</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.025</iyy><iyz>0</iyz><izz>0.015</izz>
        </inertia>
      </inertial>

      <visual name="front_left_steering_link_visual">
        <geometry>
          <box><size>0.05 0.05 0.05</size></box>
        </geometry>
      </visual>

      <collision name="front_left_steering_link_collision">
        <geometry>
          <box><size>0.05 0.05 0.05</size></box>
        </geometry>
      </collision>
    </link>

    <link name="front_right_steering_link">
      <pose>0.6 -0.45 0 0 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.015</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.025</iyy><iyz>0</iyz><izz>0.015</izz>
        </inertia>
      </inertial>

      <visual name="front_right_steering_link_visual">
        <geometry>
          <box><size>0.05 0.05 0.05</size></box>
        </geometry>
      </visual>

      <collision name="front_right_steering_link_collision">
        <geometry>
          <box><size>0.05 0.05 0.05</size></box>
        </geometry>
      </collision>
    </link>

    <!-- ================= FRONT WHEELS ================= -->
    <link name="front_left_wheel">
      <!-- relative to steering link; keep centered on that link -->
      <pose>0.6 -0.45 0 1.5708 1.5708 0</pose>

      <inertial>
        <mass>5</mass>
        <inertia>
          <ixx>0.057</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.057</iyy><iyz>0</iyz><izz>0.1</izz>
        </inertia>
      </inertial>

      <visual name="front_left_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.13</length>
          </cylinder>
        </geometry>
      </visual>

      <collision name="front_left_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.13</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <link name="front_right_wheel">
      <pose>0.6 0.45 0 1.5708 1.5708 0</pose>

      <inertial>
        <mass>5</mass>
        <inertia>
          <ixx>0.057</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.057</iyy><iyz>0</iyz><izz>0.1</izz>
        </inertia>
      </inertial>

      <visual name="front_right_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.13</length>
          </cylinder>
        </geometry>
      </visual>

      <collision name="front_right_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.13</length>
          </cylinder>
        </geometry>
      </collision>
    </link>
    <link name="lidar_link">
  <!-- position relative to chassis center -->
      <pose>0.8 0 0.5 0 0 0</pose>    

      <visual name="lidar_visual">
        <geometry><box><size>0.05 0.05 0.05</size></box></geometry>
      </visual>    

      <collision name="lidar_collision">
        <geometry><box><size>0.05 0.05 0.05</size></box></geometry>
      </collision>    

      <sensor name="lidar" type="gpu_lidar">
        <always_on>true</always_on>
        <update_rate>10</update_rate>
        <topic>/scan</topic>
        <ray>
          <scan>
            <horizontal>
              <samples>720</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.12</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
      </sensor>
    </link>
    <joint name="lidar_joint" type="fixed">
      <parent>chassis</parent>
      <child>lidar_link</child>
    </joint>


    <!-- ================= JOINTS ================= -->
    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_left_wheel</child>
      <axis><xyz>0 0 -1</xyz></axis>
    </joint>

    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_right_wheel</child>
      <axis><xyz>0 0 -1</xyz></axis>
    </joint>

    <joint name="front_left_steering_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_left_steering_link</child>
      <axis><xyz>0 0 1</xyz></axis>
    </joint>

    <joint name="front_right_steering_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_right_steering_link</child>
      <axis><xyz>0 0 1</xyz></axis>
    </joint>

    <joint name="front_left_wheel_joint" type="revolute">
      <parent>front_left_steering_link</parent>
      <child>front_left_wheel</child>
      <axis><xyz>0 0 -1</xyz></axis>
    </joint>

    <joint name="front_right_wheel_joint" type="revolute">
      <parent>front_right_steering_link</parent>
      <child>front_right_wheel</child>
      <axis><xyz>0 0 -1</xyz></axis>
    </joint>


    <!-- ================= ACKERMANN PLUGIN ================= -->
    <!--<plugin
      filename="ignition-gazebo-ackermann-steering-system"
